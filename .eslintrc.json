{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {

    // disable rules from base configurations
    "no-console": "off",

    // new rules
    "quotes": [2, "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }],
    "eqeqeq": 2,
    "semi": 2,
    "comma-style": [2, "last"],
    "curly": [2, "multi-line", "consistent"],
    "new-parens": 2,
    "no-multi-str": 2,
    "no-unneeded-ternary": 2,
    "no-multi-spaces": 2,
    "no-useless-return": 2,
    "no-unsafe-negation": 2,
    "no-dupe-keys": 2,
    "no-shadow-restricted-names": 2,
    "template-curly-spacing": [2, "always"],
    "dot-location": [2, "object"],
    "dot-notation": 2,
    "yoda": 2,
    "callback-return": 2,
    "indent": [2, 2]
  }
}